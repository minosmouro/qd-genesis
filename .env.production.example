# ============================================
# QUADRADOIS CRM - VARIÁVEIS DE PRODUÇÃO
# ============================================
# IMPORTANTE: NÃO commitar este arquivo com valores reais!
# Copie para .env.production e preencha com valores reais
# ============================================

# ========== VERSÃO ==========
VERSION=1.0.0

# ========== TIMEZONE ==========
TZ=America/Sao_Paulo

# ========== DATABASE ==========
DATABASE_USER=db_quadradois
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_NAME=db_quadradois
# Se a senha tiver caracteres especiais, gere a versão percent-encoded (ex: @ -> %40)
DATABASE_PASSWORD_URLENCODED=CHANGE_ME_STRONG_PASSWORD_URLENCODED

# ========== REDIS ==========
REDIS_URL=redis://redis:6379/0

# ========== SECRETS ==========
# Gere com: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_SECRET_KEY_64_CHARS
# Gere com: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=CHANGE_ME_GENERATE_FERNET_KEY

# ========== AWS S3 ==========
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_REGION=us-east-2
AWS_S3_BUCKET_NAME=quadra-fotos

# ========== CORS ==========
CORS_ORIGINS=https://app.quadradois.com.br,https://crm.quadradois.com.br,https://api.quadradois.com.br

# ========== FRONTENDS ==========
FRONTEND_VITE_API_URL=https://api.quadradois.com.br
BUSINESS_CENTER_VITE_API_URL=https://api.quadradois.com.br

# ========== CELERY ==========
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ========== FLASK ==========
FLASK_ENV=production
FLASK_DEBUG=False

# ========== QUEUE ==========
REFRESH_QUEUE_MAX_BATCH_SIZE=30
REFRESH_QUEUE_TIMEOUT_SECONDS=300
REFRESH_QUEUE_MAX_RETRIES=3
